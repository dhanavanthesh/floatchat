# FloatChat Configuration Example
# Copy this file to .env and update with your actual values

# Groq AI Configuration
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.1-80b-instant
MAX_TOKENS=4000
TEMPERATURE=0.1

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=argo_data
MONGODB_COLLECTION=float_profiles

# ChromaDB Configuration
CHROMADB_PATH=./data/chromadb
CHROMADB_COLLECTION=argo_context

# Application Settings
LOG_LEVEL=INFO
DEBUG_MODE=false

# Data Processing Settings
NETCDF_DATA_PATH=./data/netcdf
MAX_DOWNLOAD_SIZE_MB=100
AUTO_GENERATE_SAMPLES=true

# FTP Settings for Real ARGO Data (Advanced)
ARGO_FTP_HOST=ftp.ifremer.fr
ARGO_FTP_PATH=/ifremer/argo/dac
ARGO_DATA_TIMEOUT=30

# Regional Data Bounds (modify if needed)
# Arabian Sea: 50-80°E, 5-30°N
# Bay of Bengal: 75-100°E, 5-25°N
# Indian Ocean: 40-120°E, -40-30°N